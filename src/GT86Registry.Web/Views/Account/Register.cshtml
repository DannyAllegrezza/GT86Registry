@model RegisterViewModel
@{
    ViewData["Title"] = "Account Registration";
}

<h1>@ViewData["Title"]</h1>

<div class="page-description">
    <p>We're excited for you to join our @SiteSettings.Value.VehiclePlatform community! As a member, you'll enjoy the following features:<p>

    <ul>
        <li>Register your vehicle in our <a href="">official registry</a></li>
        <li>Create an online profile for your vehicle and build</li>
        <li>Communicate with other @SiteSettings.Value.VehiclePlatform enthusiasts</li>
        <li>Provide feedback on how to enhance the website</li>
    </ul>

    <p>Please note that we do require your vehicle information number (VIN) in order to validate your @SiteSettings.Value.VehiclePlatform. <a id="show-more-info">More info</a></p>

    <div id="more-info">
        <p>Your VIN is <b>only</b> used to help us validate your @SiteSettings.Value.VehiclePlatform. Your VIN is generally located in a few places. The most common are on the top of your dashboard, visible through the windshield or the inside of your driver door sill.</p>
    </div>

</div>


<div class="row">
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VIN"></label>
                <input asp-for="VIN" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>

            <div id="vehicle-details">
                <div class="form-group">
                    <label asp-for="YearId"></label>
                    <select asp-for="YearId" asp-items="@Model.Years" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ManufacturerId"></label>
                    <select asp-for="ManufacturerId" asp-items="@Model.Manufacturers" class="form-control"></select>
                    <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VehicleModelId"></label>
                    <select asp-for="VehicleModelId" asp-items="@Model.VehicleModels" class="form-control"></select>
                    <span asp-validation-for="VehicleModelId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ColorId"></label>
                    <select asp-for="ColorId" asp-items="@Model.ColorChoices" class="form-control"></select>
                    <span asp-validation-for="ColorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TransmissionId"></label>
                    <select asp-for="TransmissionId" asp-items="@Model.TransmissionChoices" class="form-control"></select>
                    <span asp-validation-for="TransmissionId" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/registration.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/registration-page.css" />
}