@model RegisterViewModel
@{
    ViewData["Title"] = "Account Registration";
}

<h1>@ViewData["Title"]</h1>

<p class="page-description">Registration is quick and of course free! Please note that we do require your vehicle information number (VIN) in order to validate your vehicle. <a id="show-more-info">More info</a></p>

<div id="more-info">
    <p>Your VIN is <b>only</b> used to help us validate your @SiteSettings.Value.VehiclePlatform.</p>
</div>


<div class="row">
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VIN"></label>
                <input asp-for="VIN" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>

            <div id="vehicle-details">
                <div class="form-group">
                    <label asp-for="YearId"></label>
                    <select asp-for="YearId" asp-items="@Model.Years" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ManufacturerId"></label>
                    <select asp-for="ManufacturerId" asp-items="@Model.Manufacturers" class="form-control"></select>
                    <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VehicleModelId"></label>
                    <select asp-for="VehicleModelId" asp-items="@Model.VehicleModels" class="form-control"></select>
                    <span asp-validation-for="VehicleModelId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ColorId"></label>
                    <select asp-for="ColorId" asp-items="@Model.ColorChoices" class="form-control"></select>
                    <span asp-validation-for="ColorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TransmissionId"></label>
                    <select asp-for="TransmissionId" asp-items="@Model.TransmissionChoices" class="form-control"></select>
                    <span asp-validation-for="TransmissionId" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </form>
</div>

