@model IEnumerable<Vehicle>;

<div class="row">
    @foreach (var vehicle in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <a asp-controller="Vehicles" asp-action="Details" asp-route-id="@vehicle.VIN">
                    <img src="@vehicle.Image.Uri" alt="...">
                </a>
                <div class="caption">
                    <h3>
                        @vehicle.ModelYear.Year @vehicle.ModelYear.Model.Manufacturer.Name @vehicle.ModelYear.Model.Name
                        <span> (@vehicle.Status.Name)</span>
                    </h3>
                </div>
            </div>
        </div>
    }
</div>